public class Activity2 {

    public static void main(String[] args) {

        int number1 = 10;
        int number2 = 20;
        int number3 = 45;
        int avg = (number1 + number2 + number3) / 3;


        System.out.println("The Valuen of First number is: " + number1);
        System.out.println("The Value of Second number is: " + number2);
        System.out.println("The Value of Third number is: " + number3);
        System.out.println("The Average of the three number is: " + avg);
    }

}
